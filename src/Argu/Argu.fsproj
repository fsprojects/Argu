<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    
    <TargetFrameworks>netstandard1.6;net40;net35</TargetFrameworks>
    <OutputType>Library</OutputType>
    <OutputPath>..\..\bin\$(TargetFramework)</OutputPath>

    <DisableImplicitFSharpCoreReference>true</DisableImplicitFSharpCoreReference>
    <DisableImplicitSystemValueTupleReference>true</DisableImplicitSystemValueTupleReference>
    <!-- https://github.com/Microsoft/msbuild/issues/1333#issuecomment-296346352 -->
    <FrameworkPathOverride Condition="'$(TargetFramework)' == 'net35'">C:\Program Files (x86)\Reference Assemblies\Microsoft\Framework\.NETFramework\v3.5\Profile\Client</FrameworkPathOverride>
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard1.6' ">
    <DefineConstants>$(DefineConstants);CORE_CLR</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    
    <Reference Include="System.Configuration" Condition=" '$(TargetFramework)' != 'netstandard1.6' " />
    
    <PackageReference Include="FSharp.Core" Version="3.0.2" Condition=" '$(TargetFramework)' == 'net35' " />
    <PackageReference Include="FSharp.Core" Version="3.0.2" Condition=" '$(TargetFramework)' == 'net40' " />
    <PackageReference Include="FSharp.Core" Version="4.2.2" Condition=" '$(TargetFramework)' == 'netstandard1.6' " />

    <PackageReference Include="System.Numerics.Vectors" Version="4.3" Condition=" '$(TargetFramework)' == 'netstandard1.6' " />
    <PackageReference Include="System.Reflection" Version="4.3" Condition=" '$(TargetFramework)' == 'netstandard1.6' " />
    <PackageReference Include="System.Reflection.Extensions" Version="4.3" Condition=" '$(TargetFramework)' == 'netstandard1.6' " />
    <PackageReference Include="System.Reflection.TypeExtensions" Version="4.3" Condition=" '$(TargetFramework)' == 'netstandard1.6' " />
    
  </ItemGroup>
  
  <ItemGroup>
    <Compile Include="AssemblyInfo.fs" />
    <Compile Include="Types.fs" />
    <Compile Include="Attributes.fs" />
    <Compile Include="Utils.fs" />
    <Compile Include="ConfigReaders.fs" />
    <Compile Include="UnionArgInfo.fs" />
    <Compile Include="PreCompute.fs" />
    <Compile Include="UnParsers.fs" />
    <Compile Include="ParseResults.fs" />
    <Compile Include="Parsers\Common.fs" />
    <Compile Include="Parsers\Cli.fs" />
    <Compile Include="Parsers\KeyValue.fs" />
    <Compile Include="ArgumentParser.fs" />
  </ItemGroup>
  <ItemGroup>
    <None Include="paket.references" />
  </ItemGroup>
  <Import Project="..\..\.paket\Paket.Restore.targets" />
</Project>