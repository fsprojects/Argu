<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>

    <!--<TargetFrameworks>netcoreapp2.0;net40;net35</TargetFrameworks>-->
    <TargetFramework>net461</TargetFramework>
    <OutputType>Library</OutputType>
    <OutputPath>bin\$(TargetFramework)</OutputPath>

    <DisableImplicitFSharpCoreReference>true</DisableImplicitFSharpCoreReference>
    <DisableImplicitSystemValueTupleReference>true</DisableImplicitSystemValueTupleReference>
    <!-- https://github.com/Microsoft/msbuild/issues/1333#issuecomment-296346352 -->
    <FrameworkPathOverride Condition="'$(TargetFramework)' == 'net35'">C:\Program Files (x86)\Reference Assemblies\Microsoft\Framework\.NETFramework\v3.5\Profile\Client</FrameworkPathOverride>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard1.6' ">
    <DefineConstants>$(DefineConstants);CORE_CLR</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <None Include="paket.references" />
    <Compile Include="Tests.fs" />
    <None Include="tests.fsx" />
    <Content Include="App.config" />
  </ItemGroup>

  <ItemGroup>

    <ProjectReference Include="../../src/Argu/Argu.fsproj" />
    <!--<Reference Include="FSharp.Data.TypeProviders" />-->


    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.3.0" />
    
    <!--<PackageReference Include="NUnit" Version="3.8.1" />-->
    <PackageReference Include="xunit" Version="2.3.1" />
    <PackageReference Include="Unquote" Version="3.2" />
    <PackageReference Include="FsCheck" Version="2.10.3" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.2.0" />
    <!--<PackageReference Include="NUnit3TestAdapter" Version="3.8.0" />-->
    
    <!-- FSharp.Core is inherited from Argu -->
    <!--<PackageReference Include="FSharp.Core" Version="" />-->
    
  </ItemGroup>

  <Import Project="..\..\.paket\Paket.Restore.targets" />
</Project>